<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="3 seconds">
    <contextName>crm-eureka</contextName>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="com.noah.crm.cloud.utils.logback.MyPatternLayoutEncoder">
            <pattern>
                %d{HH:mm:ss.SSS} %-5level[%thread]%logger{32}:%line > %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

    <logger name="com.noah.crm.cloud.eureka" level="DEBUG" addctive="false"/>
</configuration>
